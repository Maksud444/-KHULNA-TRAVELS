{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Serve PHP (Docker)",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "serve:php"],
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Start React (npm start)",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["start"],
      "console": "integratedTerminal",
      "env": {
        "BROWSER": "none"
      }
    }
  ],
  "compounds": [
    {
      "name": "Run App + PHP",
      "configurations": ["Start React (npm start)", "Serve PHP (Docker)"]
    }
  ]
}
